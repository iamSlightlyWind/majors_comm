<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>chat</servlet-name>
        <servlet-class>Conversation.Handler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>Profile.Handler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>Main.Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Moderation</servlet-name>
        <servlet-class>Relation.Moderation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Handler</servlet-name>
        <servlet-class>Stats.Handler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Relation</servlet-name>
        <url-pattern>/relation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>chat</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Moderation</servlet-name>
        <url-pattern>/moderate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/stats</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>auth</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>Auth.Handler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Relation</servlet-name>
        <servlet-class>Relation.Handler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
</web-app>
